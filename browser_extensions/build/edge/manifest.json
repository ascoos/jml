{
  "manifest_version": 3,
  "name": "Ascoos JML Renderer",
  "description": "Renders JML blocks inside HTML pages (full-document, inline, mixed).",
  "version": "1.0.0",

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_end"
    }
  ],

  "permissions": [
    "activeTab",
    "scripting"
  ],

  "host_permissions": [
    "<all_urls>"
  ]
}
